{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2021",
		"removeComments": true,
		"preserveConstEnums": true,
		"lib": ["es5", "es6", "dom"],
		"outDir": "comp",
		"allowJs": true,
		"esModuleInterop": true,
		"checkJs": true,
		"moduleResolution": "NodeNext"
	},
	"include": ["*.*ts"],
	"exclude": ["node_modules", "comp"]
}
