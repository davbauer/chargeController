{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2021",
		"removeComments": true,
		"preserveConstEnums": true,
		"lib": ["ES2021", "dom"],
		"outDir": "comp",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./",
		"strict": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "comp"]
}
